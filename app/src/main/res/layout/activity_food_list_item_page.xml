<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/food_list_item.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/foodNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/foodImageView"
        android:layout_marginStart="8dp" />

    <ImageView
        android:id="@+id/foodImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/firstDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/foodNameTextView"
        android:layout_toEndOf="@id/foodImageView"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/secondDateTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstDateTextView"
        android:layout_toEndOf="@id/foodImageView"
        android:layout_marginStart="8dp" />
</RelativeLayout>
